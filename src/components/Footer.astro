---
import { getLangFromUrl, t } from "../i18n/utils";
import { getNavigation } from "../i18n/navigation";
import SocialLinks from "./SocialLinks.astro";

const lang = getLangFromUrl(Astro.url);
const nav = getNavigation(lang);
const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-dark text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">

      <!-- Column 1: Name & Tagline -->
      <div class="lg:col-span-1">
        <h3 class="text-lg font-heading font-bold text-white mb-3">Luis Sarmiento</h3>
        <p class="text-white/50 text-sm leading-relaxed mb-6">
          {t(lang, "footer.tagline")}
        </p>
        <SocialLinks class="text-white/40" />
      </div>

      <!-- Column 2: Quick Links -->
      <div>
        <h4 class="text-sm font-heading font-semibold tracking-wide text-white/80 mb-4">{t(lang, "footer.quickLinks")}</h4>
        <ul class="space-y-2.5">
          {nav.map((item) => (
            <li>
              <a href={item.href} class="text-sm text-white/50 hover:text-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Column 3: Contact -->
      <div>
        <h4 class="text-sm font-heading font-semibold tracking-wide text-white/80 mb-4">{t(lang, "footer.contact")}</h4>
        <ul class="space-y-2.5 text-sm text-white/50">
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:lsarmiento@ethz.ch" class="hover:text-white transition-colors">lsarmiento@ethz.ch</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:gsaabogado@gmail.com" class="hover:text-white transition-colors">gsaabogado@gmail.com</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>{t(lang, "contact.info.locationValue")}</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-white/10 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-white/30">
        &copy; {currentYear} {t(lang, "footer.rights")}
      </p>
    </div>
  </div>
</footer>
