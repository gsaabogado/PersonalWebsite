---
interface TimelineItem {
  dates: string;
  title: string;
  subtitle: string;
  details?: string[];
  country?: string;
  url?: string;
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<div class="relative">
  <!-- Vertical line -->
  <div class="absolute left-4 top-0 bottom-0 w-px bg-cool-gray"></div>

  <div class="space-y-8">
    {items.map((item, i) => (
      <div
        data-animate
        data-delay={`${0.1 + i * 0.1}s`}
        class="relative pl-12"
      >
        <!-- Dot -->
        <div class="absolute left-2.5 top-1.5 w-3 h-3 bg-sky rounded-full border-2 border-white shadow-sm"></div>

        <div class="bg-white rounded-lg p-5 border border-cool-gray/50 hover:shadow-sm transition-shadow">
          <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-1 mb-2">
            <div>
              <h4 class="font-heading font-semibold text-slate-dark">
                {item.url ? (
                  <a href={item.url} target="_blank" rel="noopener noreferrer" class="hover:text-sky transition-colors">
                    {item.title}
                  </a>
                ) : (
                  item.title
                )}
              </h4>
              <p class="text-sm text-charcoal/60">{item.subtitle}</p>
            </div>
            <div class="flex items-center gap-2 shrink-0">
              <span class="text-xs text-charcoal/40 font-medium">{item.dates}</span>
              {item.country && (
                <span class="text-xs text-charcoal/30">· {item.country}</span>
              )}
            </div>
          </div>
          {item.details && item.details.length > 0 && (
            <ul class="mt-3 space-y-1">
              {item.details.map((detail) => (
                <li class="text-sm text-charcoal/60 flex items-start gap-2">
                  <span class="text-sky mt-1.5 shrink-0">·</span>
                  {detail}
                </li>
              ))}
            </ul>
          )}
        </div>
      </div>
    ))}
  </div>
</div>
