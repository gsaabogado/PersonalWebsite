---
import type { ResearchTopic } from "../../data/research";

interface Props {
  topics: ResearchTopic[];
}

const { topics } = Astro.props;
---

<section class="py-20 px-4 bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {topics.map((topic, i) => (
        <div
          data-animate
          data-delay={`${0.1 + i * 0.1}s`}
          class="bg-warm-gray rounded-xl p-6 border border-cool-gray/50"
        >
          <h3 class="text-lg font-heading font-semibold text-slate-dark mb-3">{topic.title}</h3>
          <p class="text-sm text-charcoal/60 leading-relaxed">{topic.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
