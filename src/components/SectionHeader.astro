---
interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  align?: "left" | "center";
  dark?: boolean;
  class?: string;
}

const {
  label,
  title,
  subtitle,
  align = "center",
  dark = false,
  class: className = "",
} = Astro.props;

const alignClass = align === "center" ? "text-center" : "text-left";
---

<div class:list={[alignClass, className]} data-animate>
  {label && (
    <span class:list={[
      "inline-block px-3 py-1 text-xs font-medium tracking-wide rounded-full mb-4",
      dark ? "text-sky-light bg-white/10" : "text-sky bg-sky/10",
    ]}>
      {label}
    </span>
  )}
  <h2 class:list={[
    "text-3xl sm:text-4xl font-heading font-bold mb-4",
    dark ? "text-white" : "text-slate-dark",
  ]}>
    {title}
  </h2>
  {subtitle && (
    <p class:list={[
      "text-lg leading-relaxed",
      dark ? "text-white/60" : "text-charcoal/60",
      align === "center" ? "max-w-2xl mx-auto" : "max-w-2xl",
    ]}>
      {subtitle}
    </p>
  )}
</div>
