---
import { getLangFromUrl, t } from "../../i18n/utils";
import SectionHeader from "../SectionHeader.astro";

const lang = getLangFromUrl(Astro.url);
---

<section class="py-24 px-4 bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">

      <!-- Photo -->
      <div data-animate="fade-left" class="order-2 lg:order-1">
        <div class="rounded-2xl overflow-hidden shadow-lg">
          <img
            src="/images/profile/about.png"
            alt="Luis Sarmiento"
            class="w-full h-auto object-cover"
          />
        </div>
      </div>

      <!-- Text -->
      <div data-animate="fade-right" class="order-1 lg:order-2">
        <SectionHeader
          label={t(lang, "about.label")}
          title={t(lang, "about.title")}
          align="left"
        />
        <div class="mt-6 space-y-4 text-charcoal/70 leading-relaxed">
          <p>{t(lang, "about.p1")}</p>
          <p>{t(lang, "about.p2")}</p>
          <p>{t(lang, "about.p3")}</p>
        </div>
      </div>
    </div>
  </div>
</section>
