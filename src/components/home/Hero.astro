---
import { getLangFromUrl, t } from "../../i18n/utils";
import { getResearchPath } from "../../i18n/navigation";
import SocialLinks from "../SocialLinks.astro";

const lang = getLangFromUrl(Astro.url);
const researchPath = getResearchPath(lang);
---

<section class="relative py-16 sm:py-24 overflow-hidden">
  <!-- Background image -->
  <div class="absolute inset-0">
    <img
      src="/images/backgrounds/forest-river.png"
      alt=""
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-slate-dark/80"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Floating card -->
    <div data-animate class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-lg p-8 sm:p-12">
      <div class="flex flex-col sm:flex-row items-center sm:items-start gap-8">

        <!-- Photo -->
        <div class="shrink-0">
          <div class="w-32 h-32 sm:w-36 sm:h-36 rounded-full overflow-hidden border-2 border-cool-gray shadow-sm">
            <img
              src="/images/profile/headshot.png"
              alt="Luis Sarmiento"
              class="w-full h-full object-cover object-top"
            />
          </div>
        </div>

        <!-- Text -->
        <div class="text-center sm:text-left flex-1">
          <h1 class="text-3xl sm:text-4xl font-heading font-bold text-slate-dark leading-tight mb-1">
            Luis Sarmiento
          </h1>
          <p class="text-base text-sky font-body mb-4">
            {t(lang, "hero.chip")} Â· ETH Zurich
          </p>
          <p class="text-sm sm:text-base text-charcoal/55 font-body leading-relaxed mb-6 max-w-lg">
            {t(lang, "hero.description")}
          </p>

          <!-- CTAs + Social -->
          <div class="flex flex-col sm:flex-row items-center sm:items-start gap-4">
            <div class="flex gap-3">
              <a href={researchPath} class="inline-flex items-center justify-center font-body font-medium rounded-md px-5 py-2.5 text-sm bg-slate-dark text-white hover:bg-slate transition-all duration-200">
                {t(lang, "hero.cta1")}
              </a>
              <a href="/cv/Luis_Sarmiento_CV.pdf" class="inline-flex items-center justify-center font-body font-medium rounded-md px-5 py-2.5 text-sm border border-cool-gray text-charcoal/70 hover:border-slate-light hover:text-slate-dark transition-all duration-200">
                {t(lang, "hero.cta2")}
              </a>
            </div>
            <div class="sm:ml-auto">
              <SocialLinks class="text-charcoal/25" iconClass="w-4 h-4" />
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
